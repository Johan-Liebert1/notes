FROM quay.io/fedora/fedora-bootc:42

COPY bootc /usr/bin
COPY cfsctl /usr/bin
COPY extra /

RUN set -x; \
    kver=$(cd /usr/lib/modules && echo *); \
    dracut -vf /usr/lib/modules/$kver/initramfs.img $kver;

RUN passwd -d root
